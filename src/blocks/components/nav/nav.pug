mixin nav({className = false, activeLink = '/'})
    -
        const pageNames = [{title: 'Kaleydo EVO min', link: '#header'},
                          {title: 'Видео', link: '#video'},
                          {title: 'Как использовать', link: '#usage'},
                          {title: 'Компания Alcea', link: '#alcea'} ];
    nav.nav(class=className)
        ul.nav__links
            each val, index in pageNames
                if (val.link !== activeLink)
                    li.nav__item
                        a.nav__link(href=val.link)= val.title
                else
                    li.nav__item
                        a.nav__link.nav__link_active(href=val.link)= val.title
